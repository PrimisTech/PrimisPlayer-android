<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PrimisDemoApplication" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@android:color/transparent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="actionBarStyle">@style/Widget.AppCompat.ActionBar</item>

        <item name="android:popupWindowStyle">@style/Theme.PrimisDemoApplication.PopupWindowStyle</item>
        <item name="android:windowBackground">@drawable/background_gradient</item>

        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="Theme.PrimisDemoApplication.PopupWindowStyle" parent="Widget.AppCompat.PopupWindow">
        <item name="android:popupBackground">@color/secondaryLightColor</item>
    </style>

</resources>